<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <h1>Add Project </h1>
                <form method="post" id="form">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="title_en">Project Title Eng: </label>
                                <input type="text" id="title_en" class="form-control" name="title_en"
                                    value="<%= item.title_en%>">
                            </div>
                            <div class="form-group">
                                <label for="title_vi">Project Title Vi: </label>
                                <input type="text" id="title_vi" class="form-control" name="title_vi"
                                    value="<%= item.title_vi%>">
                            </div>
                            <div class="form-group">
                                <label for="url_en">URL eng: </label>
                                <input type="text" id="url_en" class="form-control" name="url_en"
                                    value="<%= item.url_en%>">
                            </div>
                            <div class="form-group">
                                <label for="url_vi">URL vi: </label>
                                <input type="text" id="url_vi" class="form-control" name="url_vi"
                                    value="<%= item.url_vi%>">
                            </div>
                            <div class="form-group">
                                <label for="folder">Folder name: </label>
                                <input type="text" id="folder" class="form-control" name="folder"
                                    value="<%= item.folder%>">
                            </div>
                            <div class="form-group">
                                <label for="location_en">location Eng: </label>
                                <input type="text" id="location_en" class="form-control" name="location_en"
                                    value="<%= item.location_en %>">
                            </div>
                            <div class="form-group">
                                <label for="location_vi">location Vi: </label>
                                <input type="text" id="location_vi" class="form-control" name="location_vi"
                                    value="<%= item.location_vi %>">
                            </div>
                            <div class="form-group">
                                <label for="tags">Tags: </label>
                                <div class="form-group">
                                    <div class="form-group">
                                        <div style="display: flex; flex-wrap: wrap;">
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags1" value="industry"
                                                    <%= (item.tags.includes("industry")) ? 'checked':''%>>
                                                <label for="tags1">Industry</label>
                                            </div>
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags2" value="architecture"
                                                    <%= (item.tags.includes("architecture")) ? 'checked':''%>>
                                                <label style="" for="tags2">Architecture</label>
                                            </div>
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags3" value="port"
                                                    <%= (item.tags.includes("port")) ? 'checked':''%>>
                                                <label for="tags3">Port & Offshore</label>
                                            </div>
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags4" value="heritage"
                                                    <%= (item.tags.includes("heritage")) ? 'checked':''%>>
                                                <label for="tags4">Heritage</label>
                                            </div>
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags5" value="infrastructure"
                                                    <%= (item.tags.includes("infrastructure")) ? 'checked':''%>>
                                                <label for="tags3">Infrastructure</label>
                                            </div>
                                            <div style="width: 33.33%">
                                                <input type="checkbox" name="tags[]" id="tags6" value="management"
                                                    <%= (item.tags.includes("management")) ? 'checked':''%>>
                                                <label for="tags3">Facility Management</label>
                                            </div>
                                            <!-- repeat the above code for each group of 3 checkboxes -->
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <%for(button in item.button){%>
                            <div class="form-group">
                                <label for="button">Button <%= ++button %> Name</label>
                                <input type="text" class="form-control" id="button" name="button[<%=button%>][name]"
                                    value="<%button.name%>">
                            </div>
                            <div class=" form-group">
                                <label for="button">Button <%= button %> URL</label>
                                <input type="text" class="form-control" id="button" name="button[<%=button%>][url]"
                                    value="<%= button.url %>">
                            </div>
                            <%}%>
                        
                             <button type="button" onclick="addButton()">Add Button</button>
                            <div class="form-group">
                                <label for="index">Index number: </label>
                                <input type="text" id="index" class="form-control" name="index">
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    const formGroup = (type, number) => {
        let formRow = document.createElement("div");
        formRow.classList.add("form-group");
        let label = document.createElement("label");
        label.setAttribute("for", "button")
        label.innerText = `Button ${number} ${type}`
        let field = document.createElement("input");
        let fieldAttr = {
            type: "text",
            id: "button",
            name: `button[${number}][${type}]`,
            class: "form-control",
        };
        const setAttr = (element, attributes) => {
            Object.keys(attributes).forEach(attr => {
                element.setAttribute(attr, attributes[attr]);
            });
        }
        setAttr(field, fieldAttr)
        formRow.appendChild(label);
        formRow.appendChild(field);
        return formRow
    }

    const addButton = () => {
        let rowCount = document.getElementsByClassName("panel-body")[0].children;
        let buttonCount = (rowCount.length - 11) / 2;
        document.getElementsByClassName("panel-body")[0].insertBefore(formGroup("Name", buttonCount + 1),
            rowCount[rowCount.length - 3])
        document.getElementsByClassName("panel-body")[0].insertBefore(formGroup("URL", buttonCount + 1),
            rowCount[rowCount.length - 3])
    }
</script>

</html>